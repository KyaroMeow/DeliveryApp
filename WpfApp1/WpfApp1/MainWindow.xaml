<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        Title="Я-доставка" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2F">
    <Window.Resources>
        <Style TargetType="Button" x:Key="SidebarButtonStyle">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#758E4F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid x:Name="Sidebar" Width="250" Visibility="Collapsed" Background="#FF252540" HorizontalAlignment="Left"  Panel.ZIndex="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="59*"></RowDefinition>
                <RowDefinition Height="645*"></RowDefinition>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Background="#508991">
                <Button Content="×" DockPanel.Dock="Right" Foreground="White" FontWeight="Bold" FontSize="32" VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent"  Click="CloseSidebar_Click"/>
                <TextBlock Text="Сценарии" DockPanel.Dock="Left" FontSize="22" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold" Margin="10,0,0,0"/>
            </DockPanel>
            <StackPanel Grid.Row="1" Background="#F8FCEE">
                <TextBlock Text="Заказы:" FontWeight="DemiBold" FontSize="20" Foreground="#820933" Margin="5"/>
                <Button Content="Несколько заказов" Style="{StaticResource SidebarButtonStyle}" Click="Scenario1_Click"/>
                <Button Content="Больше заказов" Style="{StaticResource SidebarButtonStyle}" Click="Scenario2_Click"/>
                <Button Content="Много заказов" Style="{StaticResource SidebarButtonStyle}" Click="Scenario6_Click"/>
                <TextBlock Text="Районы:" FontWeight="DemiBold" FontSize="20" Foreground="#820933" Margin="5"/>
                <Button Content="Один район" Style="{StaticResource SidebarButtonStyle}" Click="Scenario3_Click"/>
                <Button Content="Разные районы" Style="{StaticResource SidebarButtonStyle}" Click="Scenario4_Click"/>
                <TextBlock Text="Прочее:" FontWeight="DemiBold" FontSize="20" Foreground="#820933" Margin="5"/>
                <Button Content="Разный приоритет" Style="{StaticResource SidebarButtonStyle}" Click="Scenario5_Click"/>
            </StackPanel>
        </Grid>

        <!-- Top Bar -->
        <StackPanel Orientation="Horizontal"  VerticalAlignment="Top" Height="60" Background="#5296A5" Panel.ZIndex="1">
            <Button Content="☰" Width="50" HorizontalAlignment="Left"  Height="50" FontSize="25"
                    Background="Transparent" Foreground="White"
                    BorderBrush="Transparent" Click="ToggleSidebar_Click" MinWidth="50"/>
            <TextBlock Text="Я-доставка." Foreground="#F9F6F1" VerticalAlignment="Center"
                       FontSize="23" FontWeight="Bold" />
            <TextBlock Text="Система маршрутизации" Foreground="#E9DA35" VerticalAlignment="Center"
           FontSize="23" FontWeight="Normal" Margin="5" />
        </StackPanel>

        <!-- Main Graph Area -->
        <Canvas x:Name="GraphCanvas" Margin="0,50,0,0" Background="#F8FDED">
            <!-- Тут программно будут добавляться вершины и линии -->
        </Canvas>
    </Grid>
</Window>
