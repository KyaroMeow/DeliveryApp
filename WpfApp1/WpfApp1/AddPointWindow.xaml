<Window x:Class="WpfApp1.AddPointWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Добавить заказ" Height="152" Width="263" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Приоритет:" FontWeight="Bold" />
        <Slider x:Name="PrioritySlider" Minimum="0" Maximum="1" Value="0.5" TickFrequency="0.1"
                IsSnapToTickEnabled="True" Margin="0,5" />
        <TextBlock Text="{Binding ElementName=PrioritySlider, Path=Value, StringFormat=Приоритет: {0:F2}}"
                   FontSize="14" Margin="0,0,0,10" Foreground="DarkGreen"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Добавить" Click="Add_Click" Margin="5"/>
            <Button Content="Отмена" Click="Cancel_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
